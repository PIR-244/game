<% layout('./layout/page') -%>
<% block('title', 'Корсары'); -%>
<link rel="stylesheet" href="/css/ships.css">
<h3>Корабли 4-го ранга</h3>
<p class="img_shop"><img src="/images/verf/4rang_hi.jpg" alt="."></p>
