<li><a href="/verf"><div class="body_div">
  <span class="body_span3"><img src="/images/city/verf2.png"></span>Верфь</div></a></li>
</ul>

<script type="text/javascript">
  var index_ship = '' + <%- JSON.stringify(user.ship.index_ship) %>;
  if (index_ship >= 7 && index_ship <= 9) {
    document.getElementById(index_ship).style.width = '0px';
    document.getElementById(index_ship).style.height = '0px';
    document.getElementById(index_ship).innerHTML = '';
  }

  var err_status_low = <%- JSON.stringify(err_status_low) %>;
  var err_message_low= <%- JSON.stringify(err_message_low) %>;
    if (err_status_low >= 1 && err_status_low <= 9) {
      document.getElementById('err_message_low').innerHTML = err_message_low;
    }
</script>
