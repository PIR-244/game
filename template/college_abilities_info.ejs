<% layout('./layout/page') -%>
<% block('title', 'Корсары'); -%>
<link rel="stylesheet" href="/css/college_abilities_info.css">
<div class="img_display">
  <img class="img_shop" src="/images/abilities/<%= value_img %>.jpg" alt="."><h3><%= ability.name %></h3>
  <p><%= ability_message %></p>
</div>
