<% layout('./layout/page') -%>
<% block('title', 'Корсары'); -%>
<link rel="stylesheet" href="/css/ships.css">
<h3>Корабли 5-го ранга</h3>
<p class="img_shop"><img src="/images/verf/5rang_hi.jpg" alt="."></p>
<div class="ul_li">
